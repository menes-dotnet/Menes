{
  "$id": "https://menes.io/person.json",
  "$schema": "http://json-schema.org/draft/2019-09/#",
  "title": "Person",
  "type": "object",
  "properties": {
    "anotherPerson": {
      "$ref": "#"
    },
    "firstName": {
      "type": "string",
      "description": "The person's first name."
    },
    "lastName": {
      "type": "string",
      "description": "The person's last name."
    },
    "contact": {
      "type":  "object",
      "anyOf": [
        {
          "type": "string",
          "format": "email"
        },
        {
          "type": "string",
          "format": "telephone"
        }
      ]
    },
    "age": {
      "description": "Age in years which must be equal to or greater than zero.",
      "type": "integer",
      "minimum": 0
    }

  }
}